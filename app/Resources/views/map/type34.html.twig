
<div class="spacer"></div>

    <div class="hexagon table">
        <div class="hexagontent">

            {% for tile in map.tiles %}
            <div class="hexagon type{{ tile.type }}" style="
                    top: {{(3/20 + 1/2)*(100/8.9) + (100/8.9)*(tile.rowIndex-1)*(1 + 3/20 + 1/2)}}%;
                    left:
                    {% if tile.rowIndex is divisible by(2) %}
                            {{ (100/5.6)*(0.15 + 0.5) + (100/5.6)*(tile.posIndex - 1)*1.1 }}{% else %}
                            {{ (100/5.6)*0.1 + (100/5.6)*(tile.posIndex - 1)*1.1 }}{% endif %}%">
                {% if tile.luckyNumber is not null %}
                <div class="circle">
                    <div class="number n{{ tile.luckyNumber }}">{{ tile.luckyNumber }}</div>
                </div>
                {% endif %}
            </div>
            {% endfor %}

            <div class="edge"></div>


        </div>
    </div>
